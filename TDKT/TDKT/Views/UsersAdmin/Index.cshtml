@{
    ViewBag.Title = "Index";
}

<div class="row">
    <h2>Danh sách người sử dụng</h2>
</div>
<div class="form-group">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success", @style = "margin-top:10px;" })
</div>
<div id="demo">
    <table id="myData" class="table hover table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th width="10px">STT</th>
                <th>ID</th>
                <th>Họ và tên</th>
                <th>Tên đăng nhập</th>
                <th>Đơn vị</th>
                <th width="55px"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts{
    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/datatable")
    @*<script type="text/javascript" src="~/Scripts/Datatables/schedule.js"></script>*@
    <script type="text/javascript">
        $(function () {
            oTable = $('#myData').DataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("AjaxHandler")",
                //"bProcessing": true,
                "columns": [
                    { "data": "STT" },
                    { "data": "ID", "visible": false },
                    { "data": "HoTen" },
                    { "data": "TenDangNhap" },
                    { "data": "DonVi" },
                    {
                        "targets": -1,
                        "sortable": false,
                        "data": null,
                        "defaultContent": '<button class="btn btn-sm btn-primary mgr2 edit" data-toggle="tooltip" data-placement="top" title="Thay đổi thông tin"><span class="glyphicon glyphicon-pencil"></span></button><button class="btn btn-sm btn-danger delete" data-toggle="tooltip" data-placement="top" title="Xóa"><span class="glyphicon glyphicon-remove"></span></button>'
                    }
                ],
                "fnDrawCallback": function () {
                    $('button.btn').tooltip({ 'delay': { show: 500 } });
                }
            });
            oTable.on('mouseover', 'td', function () {
                $('#myData tbody tr').removeClass('highlight');
                $(this).closest('tr').addClass('highlight');
            });

            oTable.on('click', 'button.delete', function () {
                var data = oTable.row($(this).parents('tr')).data();
                var url = "@Url.Action("Delete")";
                window.open(url + "/" + data.ID, "_self")
            });

            oTable.on('click', 'button.edit', function () {
                var data = oTable.row($(this).parents('tr')).data();
                var url = "@Url.Action("Edit")";
                window.open(url + "/" + data.ID, "_self")
            });
        });
    </script>
}