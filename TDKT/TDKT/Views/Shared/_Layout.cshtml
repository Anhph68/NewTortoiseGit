<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/modernizr", "~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Quản lý tiến độ kiểm toán</a>
            </div>
            <a class="navbar-brand" href="index.html">Năm 2014 <b class="caret"></b></a>
            <!-- /.navbar-header -->
            @Html.Partial("_LoginPartial")
            <!-- /.navbar-top-links -->
            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav main-menu">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="fa fa-home fa-fw"></i>
                                <span class="text">Trang chủ</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-bar-chart-o fa-fw"></i>
                                <span class="text">
                                    Biểu đồ
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "List")">
                                <i class="fa fa-table fa-fw"></i>
                                <span class="text">Danh sách</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-print fa-fw"></i>
                                <span class="text">
                                    Báo cáo
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="panels-wells.html">Panels and Wells</a>
                                </li>
                                <li>
                                    <a href="buttons.html">Buttons</a>
                                </li>
                                <li>
                                    <a href="notifications.html">Notifications</a>
                                </li>
                                <li>
                                    <a href="typography.html">Typography</a>
                                </li>
                                <li>
                                    <a href="grid.html">Grid</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        @if (this.User.IsInRole("Quản trị"))
                        {
                        <li>
                            <a href="#">
                                <i class="fa fa-gears fa-fw"></i>
                                <span class="text">
                                    Quản trị
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "UsersAdmin")">Người sử dụng</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "RolesAdmin")">Quyền truy cập</a>
                                </li>
                                <li>
                                    <a href="#">Đơn vị thực hiện</a>
                                </li>
                                <li>
                                    <a href="#">Lĩnh vực kiểm toán</a>
                                </li>
                                <li>
                                    <a href="#">Loại hình kiểm toán</a>
                                </li>
                            </ul>
                        </li>
                        }
                    </ul>
                    <!-- /#side-menu -->
                    <div class="sidebar-minified">
                        <i class="fa fa-angle-left"></i>
                    </div>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
</body>
</html>
