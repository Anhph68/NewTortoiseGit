@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Danh sách các cuộc kiểm toán năm</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button class="btn btn-success" id="btnAdd" data-toggle="tooltip" data-placement="top" title="Thêm cuộc kiểm toán mới"><span class="glyphicon glyphicon-plus"></span> Thêm mới</button>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table id="myData" class="table hover table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th style="width:10px !important">STT</th>
                                <th></th>
                                <th>Tên cuộc kiểm toán</th>
                                <th style="width:105px !important">Đơn vị thực hiện</th>
                                <th style="width:140px !important">Số QĐ</th>
                                <th>Ngày ra QĐ</th>
                                <th style="width:50px !important"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Styles.Render("~/Content/datatable", "~/Content/toastr")
    @Scripts.Render("~/bundles/jqueryval", "~/bundles/toastr", "~/bundles/datatable", "~/bundles/datepicker")
    <script type="text/javascript">
        $(function () {
            $('#btnAdd').click(function (e) {
                e.preventDefault();
                var url = "@Url.Action("Create")";
                $.get(url, function (data) {
                    $('body').after(data);
                });
            });
            oTable = $('#myData').DataTable({
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("AjaxHandler")",
                //"bProcessing": true,
                "columns": [
                    { "data": "STT", "width": "10px" },
                    { "data": "MaCuoc", "visible": false },
                    { "data": "TenCuoc" },
                    { "data": "DonVi" },
                    { "data": "SoQuyetDinh" },
                    { "data": "NgayKyQD", "sortable": false },
                    {
                        "targets": -1,
                        "sortable": false,
                        "data": null,
                        "defaultContent": '<button class="btn btn-sm btn-primary mgr2 edit" data-toggle="tooltip" data-placement="top" title="Thay đổi thông tin"><span class="glyphicon glyphicon-pencil"></span></button><button class="btn btn-sm btn-danger delete" data-toggle="tooltip" data-placement="top" title="Xóa"><span class="glyphicon glyphicon-remove"></span></button>'
                    }
                ],
                "fnServerParams": function (aoData) {
                    aoData.push({ "name": "Year", "value": "2012" });
                },
                "fnDrawCallback": function () {
                    $('button.btn').tooltip({ 'delay': { show: 500 } });
                }
            });
            oTable.on('mouseover', 'td', function () {
                $('#myData tbody tr').removeClass('highlight');
                $(this).closest('tr').addClass('highlight');
            });

            oTable.on('click', 'button.delete', function () {
                var data = oTable.row($(this).parents('tr')).data();
                var url = "@Url.Action("Delete")";
                $.get(url, { key: data["MaCuoc"] }, function (data) {
                    $('body').after(data);
                });
            });

            oTable.on('click', 'button.edit', function () {
                var data = oTable.row($(this).parents('tr')).data();
                var url = "@Url.Action("Edit")";
                console.log(url);
                $.get(url, { key: data["MaCuoc"] }, function (data) {
                    $('body').after(data);
                });
            });
        });
    </script>
}

