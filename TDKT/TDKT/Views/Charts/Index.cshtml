@model TDKT.Models.ChartsModel

@{
    ViewBag.Title = "Index";
    Session["Url"] = Request.RawUrl;
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Biểu đồ thống kê tiến độ kiểm toán <br /><small class="subtext">tính đến ngày @Session["date"].ToString()</small></h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tiến độ triển khai
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @(Model.Charts[0])
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @(Model.Charts[1])
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tiến độ phát hành báo cáo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @(Model.Charts[2])
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section Scripts{
    @Scripts.Render("~/bundles/highcharts")
}