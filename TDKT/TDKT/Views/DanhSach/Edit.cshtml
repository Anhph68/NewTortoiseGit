                                <div class="title-input control-label">Ngày lưu hành QĐ</div>
                                <div class="col-sm-9">
                                    <div class="input-group date">
                                        @Html.TextBoxFor(c => c.NGAY_BDQD, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm" })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <h4>Thực hiện kiểm toán</h4>
                            <div class="col-sm-12 form-group">
                                <div class="title-input control-label">Số ngày kiểm toán</div>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(c => c.SO_NGAY_KT, new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="col-sm-12 form-group">
                                <div class="checkbox ">
                                    <label>
                                        @Html.CheckBoxFor(c => c.BAT_DAU_KT)
                                        Đã bắt đầu kiểm toán ngày
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <div class='input-group date'>
                                        @(@Model.BAT_DAU_KT ? @Html.TextBoxFor(c => c.NGAY_BDTT, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "batdaukt" }) : @Html.TextBoxFor(c => c.NGAY_BDTT, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "batdaukt", @disabled = "true" }))
