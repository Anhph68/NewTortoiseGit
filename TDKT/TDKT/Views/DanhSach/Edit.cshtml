                        <div class="form-group col-sm-4">
                            <h4>Chuẩn bị kiểm toán</h4>
                            <div class="col-sm-12 form-group">
                                <div class="checkbox ">
                                    <label>
                                        @Html.CheckBoxFor(c => c.TRINH_KH)
