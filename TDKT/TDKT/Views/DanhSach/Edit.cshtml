                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <div class='input-group date'>
                                        @(@Model.TRINH_KH ? @Html.TextBoxFor(c => c.NGAY_TRINH_KH, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "trinhkh" }) : @Html.TextBoxFor(c => c.NGAY_TRINH_KH, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "trinhkh", @disabled = "true" }))
