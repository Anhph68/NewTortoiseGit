                        </div>
                        <div class="form-group col-sm-2 col-xs-6 has-feedback">
                            @Html.LabelFor(m => m.NAM_KT, new { @class = "control-label" })
                            @Html.TextBoxFor(c => c.NAM_KT, new { @class = "form-control input-sm", @placeholder = "Năm thực hiện" })
