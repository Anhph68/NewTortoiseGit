                                    <div class="title-input control-label">Ngày ra quyết định</div>
                                    <div class="col-sm-9">
                                        <div class="input-group date">
                                            @(@Model.DUYET_KH ? @Html.TextBoxFor(c => c.NGAY_QD, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "duyetkh" }) : @Html.TextBoxFor(c => c.NGAY_QD, "{0:dd/MM/yyyy}", new { @class = "form-control input-sm", @alpha = "duyetkh", @disabled = "true" }))
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                        </div>
                                    </div>
                                </div>*@
