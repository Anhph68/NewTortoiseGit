@model THKQKT.Models.getCuocByID_Result
@{
    ViewBag.Title = "Cập nhật số liệu Tổng hợp kết quả kiểm toán";
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h2>
                <i class="fa fa-database fa-fw"></i> @ViewBag.Title
                <br />
            </h2>
        </div>
    </div>
</div>
<div class="panel panel-green">
    <div class="panel-heading">
        <i class="fa fa-info fa-fw"></i>Thông tin về cuộc kiểm toán
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div><label>Tên cuộc kiểm toán:</label> @Model.TenCuoc</div>
        <div>Ngày bắt đầu cuộc kiểm toán: @Model.NgayBatDauThucHien</div>
    </div>
    <!-- /.panel-body -->
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-file-o fa-fw"></i> Các chỉ tiêu
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table id="notEnd" class="table hover table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th class="min25">Tên chỉ tiêu</th>
                        <th style="width:150px !important">Số kiểm toán</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
@section Scripts{
    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/datatable")
    <script type="text/javascript" src="@Url.Content("~/Scripts/Datatables/init.js")"></script>
    <script>
        $(function () {
            var o = getTongHop($('#notEnd'), "@Url.Action("getTongHopList", "SoLieu")");
            o.on('click', 'button.edit', function (e) {
                e.preventDefault();
                var data = o.row($(this).parents('tr')).data();
                u = '@Url.Action("EditTongHop")';
                $.get(u, { key1: data["col3"], key2: '@Session["CuocID"]' }, function (msg) {
                    $('body').append(msg);
                });
            });
        });

        $.extend($.fn.DataTable.defaults, {
            "bAutoWidth": false,
            "bServerSide": true,
            "bProcessing": true,
            "bPaginate": false,
            "language": {
                "processing": '<div id="blurringTextG"><div id="blurringTextG_1" class="blurringTextG">Đ</div><div id="blurringTextG_2" class="blurringTextG">a</div><div id="blurringTextG_3" class="blurringTextG">n</div><div id="blurringTextG_4" class="blurringTextG">g</div><div id="blurringTextG_5" class="blurringTextG">&nbsp;</div><div id="blurringTextG_6" class="blurringTextG">l</div><div id="blurringTextG_7" class="blurringTextG">ấ</div><div id="blurringTextG_8" class="blurringTextG">y</div><div id="blurringTextG_9" class="blurringTextG">&nbsp;</div><div id="blurringTextG_10" class="blurringTextG">d</div><div id="blurringTextG_11" class="blurringTextG">ữ</div><div id="blurringTextG_12" class="blurringTextG">&nbsp;</div><div id="blurringTextG_13" class="blurringTextG">l</div><div id="blurringTextG_14" class="blurringTextG">i</div><div id="blurringTextG_15" class="blurringTextG">ệ</div><div id="blurringTextG_16" class="blurringTextG">u</div><div id="blurringTextG_17" class="blurringTextG">.</div><div id="blurringTextG_18" class="blurringTextG">.</div><div id="blurringTextG_19" class="blurringTextG">.</div></div>',
                "search": "Tìm kiếm: ",
                "decimal": ",",
                "thousands": ".",
                "lengthMenu": "Hiển thị _MENU_ kết quả/trang",
                "emptyTable": "Không tìm thấy kết quả phù hợp",
                "info": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ kết quả",
                "infoEmpty": "Không tìm thấy kết quả nào phù hợp",
                "infoFiltered": "(được lọc từ _MAX_ cuộc)",
                "paginate": {
                    "first": '<span class="glyphicon glyphicon-fast-backward"></span>',
                    "previous": '<span class="glyphicon glyphicon-backward"></span>',
                    "next": '<span class="glyphicon glyphicon-forward"></span>',
                    "last": '<span class="glyphicon glyphicon-fast-forward"></span>'
                }
            }
        });

        function getTongHop(o, u) {
            return o.DataTable({
                "sAjaxSource": u,
                "columns": [
                    { "data": "col0", "sortable": false },
                    { "data": "col1", "sortable": false },
                    { "data": "col2", "searchable": false, "sortable": false },
                    { "data": "col3", "visible": false, "searchable": false, "sortable": false },
                ],
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    switch (aData["col2"]) {
                        case 1:
                            $(nRow).css("font-weight", "bold");
                            $(nRow).find("td:nth-child(3)").html("");
                            break;
                        case 0:
                            $(nRow).find("td:nth-child(3)").html('<button class="btn btn-sm btn-primary mgr2 edit" data-toggle="tooltip" data-placement="top" title="Thay đổi thông tin"><span class="glyphicon glyphicon-pencil"></span></button>');
                            break;
                    }
                },
                "fnDrawCallback": function () {
                    $('button.btn, a.btn').tooltip({ 'delay': { show: 500 } });
                }
            }).on('mouseover', 'tr[role = "row"] td', function () {
                o.find('tbody tr').removeClass('highlight');
                $(this).closest('tr').addClass('highlight');
            });
        }
    </script>
}