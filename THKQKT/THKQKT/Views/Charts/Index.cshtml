@model THKQKT.Models.ChartsModel
@{
    ViewBag.Title = "Biểu đồ thống kê";
    Session["Url"] = Request.RawUrl;
}
@section navPlus {
    @Html.Partial("_changeYear")
}
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header"><i class="fa fa-bar-chart-o fa-fw"></i> Biểu đồ thống kê tiến độ kiểm toán năm @Session["year"].ToString()<br /><small class="subtext">tính đến ngày @Session["date"].ToString()</small></h2>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <i class="fa fa-pie-chart fa-fw"></i> 
                Tiến độ triển khai
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-8">
                    <div class="panel panel-yellow">
                        <div class="panel-body">
                            @(Model.Charts[0])
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-yellow">
                        <div class="panel-body">
                            @(Model.Charts[1])
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i> 
                Tiến độ phát hành báo cáo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @(Model.Charts[2])
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <i class="fa fa-bar-chart fa-fw"></i> 
                Thống kê theo lĩnh vực
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section Scripts{
    @Scripts.Render("~/bundles/highcharts")
}