    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/ico" />
    <meta name="author" content="sav.gov.vn">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/toastr", "~/bundles/modernizr", "~/bundles/bootstrap", "~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <meta name="description" content="Tổng hợp kết quả kiểm toán © Kiểm toán Nhà nước" />
    <meta name="author" content="Trung tâm Tin học Kiểm toán Nhà nước, Phạm Hùng Anh" />
    <meta name="keywords" content="tổng hợp,kết quả kiểm toán,kiểm toán,kiểm toán nhà nước,báo cáo,trung tâm tin học,SAV,ITC" />
    <meta name="copyright" content="Copyright © 2014 Kiểm toán Nhà nước. All rights reserved." />
    <meta name="google" content="notranslate" />
    <meta name="googlebot" content="tổng hợp,kết quả kiểm toán,kiểm toán,kiểm toán nhà nước,báo cáo,trung tâm tin học,SAV,ITC" />
    <meta name="robots" content="tổng hợp,kết quả kiểm toán,kiểm toán,kiểm toán nhà nước,báo cáo,trung tâm tin học,SAV,ITC" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Tổng hợp kết quả kiểm toán</a>
            </div>
            @RenderSection("navPlus", required: false)
            @Html.Partial("_LoginPartial")
            <div class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav main-menu">
                        <li>
                            <a href="@Url.Action("Index", "Home")">
                                <i class="fa fa-home fa-fw"></i>
                                <span class="text">Trang chủ</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-database fa-fw"></i>
                                <span class="text">
                                    Số liệu Tổng hợp
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "TongHop")">Cập nhật số liệu Tổng hợp KQKT</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("QuyetToanCanDoi", "TongHop")">Cập nhật số liệu kiểm toán Báo cáo quyết toán cân đối NSNN</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("QuyetToanThu", "TongHop")">Cập nhật số liệu kiểm toán Báo cáo quyết toán thu NSNN</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("QuyetToanChi", "TongHop")">Cập nhật số liệu kiểm toán Báo cáo quyết toán chi NSNN</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-pencil fa-fw"></i>
                                <span class="text">
                                    Số liệu Kiến nghị
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "KienNghi")">Cập nhật số liệu Thực hiện kiến nghị</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-search fa-fw"></i>
                                <span class="text">
                                    Kiểm tra thông tin
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Danh_Muc", "Report")">Kiểm tra theo năm kiểm toán</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Phu_Bieu_1", "Report")">Kiểm tra theo Lĩnh vực kiểm toán</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Phu_Bieu_2", "Report")">Kiểm tra cập nhật số liệu của các đơn vị</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-file-excel-o fa-fw"></i>
                                <span class="text">
                                    Báo cáo
                                    <span class="glyphicon arrow"></span>
                                </span>
                            </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Danh_Muc", "Report")">Danh sách các cuộc kiểm toán</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Phu_Bieu_1", "Report")">Phụ biểu 01 - Tổng hợp tiến độ kiểm toán</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Phu_Bieu_2", "Report")">Phụ biểu 02 - Tiến độ thực hiện và phát hành BCKT</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Phu_Bieu_3", "Report")">Phụ biểu 03 - Đánh giá tiến độ phát hành BCKT</a>
                                </li>
                            </ul>
                        </li>
                        @if (this.User.IsInRole("Quản trị"))
                        {
                            <li>
                                <a href="#">
                                    <i class="fa fa-gears fa-fw"></i>
                                    <span class="text">
                                        Quản trị
                                        <span class="glyphicon arrow"></span>
                                    </span>
                                </a>
                                <ul class="nav nav-second-level">
                                    <li>
                                        <a href="@Url.Action("Index", "UsersAdmin")">Người sử dụng</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "DonVi")">Đơn vị thực hiện</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "LinhVuc")">Lĩnh vực kiểm toán</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "LoaiHinh")">Loại hình kiểm toán</a>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>
                    <div class="sidebar-minified">
                        <i class="fa fa-angle-left"></i>
                    </div>
                    <div class="bottom-side">Kiểm toán Nhà nước<div>Trung tâm Tin học © 2014</div></div>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
